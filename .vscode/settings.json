{
    "editor.codeActionsOnSave": { "source.fixAll.eslint": "explicit" },
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    "editor.rulers": [80],
    "eslint.probe": [
        "javascript",
        "javascriptreact",
        "typescript",
        "typescriptreact",
        "html",
        "mdx",
        "vue",
        "markdown",
        "bash",
        "json",
        "jsonc"
    ],
    "eslint.rules.customizations": [{ "rule": "*", "severity": "warn" }],
    "eslint.useFlatConfig": true
}
